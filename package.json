{
  "name": "v2",
  "version": "1.0.0",
  "main": "src/forwarder.ts",
  "author": "jens",
  "license": "MIT",
  "private": true,
  "packageManager": "yarn@4.5.0",
  "scripts": {
    "build": "yarn build-forwarder && yarn build-tests",
    "build-forwarder": "esbuild src/main.ts --bundle --platform=node --outfile=.build/mylaps-to-racemap-forwarder.js",
    "build-tests": "esbuild tests/test-mylaps-forwarder.ts --bundle --platform=node --outfile=.build/test-mylaps-forwarder.js",
    "test": "yarn build && dotenv-load ava .build/test-mylaps-forwarder.js",
    "start": "yarn build && dotenv-load node .build/mylaps-to-racemap-forwarder.js ",
    "bundle": "yarn build && pkg --compress brotli -t node20-win-x64,node20-linux-x64,node20-macos-x64 .build/mylaps-to-racemap-forwarder.js --out-path .bin",
    "pretty": "prettier --write .",
    "prepare": "husky"
  },
  "devDependencies": {
    "@types/lodash": "^4.17.9",
    "@types/moment": "^2.13.0",
    "@types/node": "^18.19.86",
    "@types/shortid": "^0.0.32",
    "ava": "^3.15.0",
    "esbuild": "^0.24.0",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "prettier": "3.3.3",
    "typescript": "^5.6.2"
  },
  "dependencies": {
    "dotenv-load": "^3.0.0",
    "lodash": "^4.17.21",
    "moment": "^2.30.1",
    "pkg": "^5.8.1",
    "shortid": "^2.2.16",
    "with-query": "^1.3.0"
  },
  "ava": {
    "verbose": true,
    "cache": false,
    "timeout": "30s",
    "files": [
      ".build/test-mylaps-forwarder.js"
    ]
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  }
}
