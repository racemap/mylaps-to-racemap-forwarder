{
  "name": "mylaps-to-racemap-forwarder",
  "version": "v1.0.2",
  "main": "main.js",
  "author": "jens",
  "license": "MIT",
  "private": true,
  "packageManager": "yarn@4.5.0",
  "scripts": {
    "dev": "yarn build && ELECTRON_DISABLE_SANDBOX=1 electron .",
    "build": "yarn build-backend && yarn build-css && yarn build-app && yarn build-tests",
    "build-css": "postcss src-app/styles.css -o public/bundle.css",
    "build-app": "esbuild src-app/app.tsx --bundle --outfile=./renderer/bundle.js",
    "build-backend": "node scripts/build-local-backend.mjs",
    "build-tests": "esbuild tests/test-mylaps-forwarder.ts --bundle --platform=node --outfile=.build/test-mylaps-forwarder.js",
    "test": "yarn build && dotenv-load ava .build/test-mylaps-forwarder.js",
    "start": "yarn build && dotenv-load node .build/mylaps-to-racemap-forwarder.js ",
    "bundle": "yarn build && pkg --compress brotli -t node18-win-x64,node18-linux-x64,node18-macos-x64 .build/mylaps-to-racemap-forwarder.js --out-path .bin",
    "release": "yarn bundle && node ./scripts/rename-binaries.mjs",
    "pretty": "prettier --write .",
    "preinstall": "node ./scripts/edit-git-config.mjs && git checkout",
    "inc-version": "node ./scripts/new-version.mjs ./ && git checkout && node ./scripts/add-version.mjs && yarn pretty",
    "build-version": "node ./scripts/handle-git-version.mjs ./templates/version.ts.template ./src/version.ts"
  },
  "devDependencies": {
    "@types/lodash": "^4.17.9",
    "@types/moment": "^2.13.0",
    "@types/node": "^18.19.86",
    "@types/shortid": "^0.0.32",
    "autoprefixer": "^10.4.21",
    "ava": "^3.15.0",
    "electron": "^35.2.1",
    "esbuild": "^0.24.0",
    "lint-staged": "^15.2.10",
    "prettier": "3.3.3",
    "tailwindcss": "^4.1.4",
    "typescript": "^5.6.2"
  },
  "dependencies": {
    "@radix-ui/react-tabs": "^1.1.9",
    "@tailwindcss/postcss": "^4.1.4",
    "@types/electron": "^1.6.12",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dotenv-load": "^3.0.0",
    "lodash": "^4.17.21",
    "lucide-react": "^0.503.0",
    "moment": "^2.30.1",
    "pkg": "^5.8.1",
    "postcss": "^8.5.3",
    "postcss-cli": "^11.0.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "shortid": "^2.2.16",
    "tailwind-merge": "^3.2.0",
    "tw-animate-css": "^1.2.8",
    "with-query": "^1.3.0"
  },
  "ava": {
    "verbose": true,
    "cache": false,
    "timeout": "30s",
    "files": [
      ".build/test-mylaps-forwarder.js"
    ]
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  }
}
